<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#191121"  android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/r2knu3gwxzsx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#191121"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/rtvm1hgspz19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="#191121"
            android:padding="16dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rxthzxi5dwh"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginVertical="12dp"
                android:layout_marginEnd="24dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/ry0r1altbad"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="보관중인 타임캡슐"
                />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/capsuleRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#191121" android:padding="8dp" />

    <TextView
        android:id="@+id/emptyListMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="만료된 캡슐이 없습니다."
        android:textSize="18sp"
        android:textColor="@android:color/darker_gray"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:padding="16dp"
        android:background="#191121" /> </LinearLayout>